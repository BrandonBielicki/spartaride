<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="RouteSelect">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/buttonsBar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/cancel"
            android:padding="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/spacer"
            android:layout_toStartOf="@+id/spacer" />

        <View
            android:id="@+id/spacer"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/select"
            android:layout_alignTop="@+id/cancel"
            android:background="?android:attr/dividerVertical"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4dip" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Select"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/select"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/spacer"
            android:layout_toRightOf="@id/spacer"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonsBar"
        android:layout_centerInParent="true"
        android:gravity="center_vertical|center_horizontal">

        <GridView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridview"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:listSelector="@color/grey"
            android:stretchMode="columnWidth"
            android:textAlignment="center"
            android:numColumns="4"
            android:choiceMode="singleChoice"
            android:clickable="true" />
    </RelativeLayout>

</RelativeLayout>
